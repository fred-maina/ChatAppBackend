# ============================================
# ChatApp Backend - Example Environment File
# ============================================

# ---- Application ----
SPRING_APPLICATION_NAME=chatapp
SERVER_PORT=8080

# ---- Database Configuration ----
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/chatappdb
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver

# ---- JWT Configuration ----
JWT_SECRET=YOUR_SUPER_SECRET_KEY_HERE
JWT_EXPIRATION=86400000

# ---- Google OAuth Configuration ----
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE
GOOGLE_SECRET_ID=YOUR_GOOGLE_CLIENT_SECRET_HERE
GOOGLE_REDIRECT_URI=http://localhost:8080/api/auth/oauth/google

# ---- Redis Configuration ----
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD_HERE
SPRING_DATA_REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0

# ---- Deployment/Container Configuration (optional) ----
IMAGE_TAG=latest
